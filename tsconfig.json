{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"vite/client",
			"vitest/globals",
			"@types/testing-library__jest-dom"
		],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./src",
		"src/vite-env.d.ts"
	]
}